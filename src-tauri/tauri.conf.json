{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GearVR Controller Bridge",
  "version": "1.0.0",
  "identifier": "com.gearvr-controller-bridge",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GearVR Controller Bridge",
        "backgroundColor": "#121212",
        "width": 900,
        "height": 662
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "locales/**/*",
      "icons/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
